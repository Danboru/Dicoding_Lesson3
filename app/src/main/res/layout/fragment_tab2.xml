<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_kiri_kanan"
    android:paddingRight="@dimen/padding_kiri_kanan"
    tools:context="com.example.danboru.materialtab.fragments.Tab2Fragment"
    android:gravity="center"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textSatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tab2"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/ukurantext"
        />

    <Button
        android:id="@+id/clickSaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clickme"
        android:layout_below="@+id/textSatu"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
